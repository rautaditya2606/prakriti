            input.name = `q${index + 1}`;
            input.value = answer;
            form.appendChild(input);
          }
        });
        form.submit();
        return;
      }

      // Go to next question
      currentQuestionIndex++;
      renderQuestion();
      updateProgress();
      
      // Scroll to top of question
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    function goToPreviousQuestion() {
